generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum Currency {
    RUB
    USD
}

enum UserRole {
    USER
    SELLER
    ADMIN
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    firstName String
    lastName  String
    nickName  String   @unique
    role      UserRole @default(USER)

    sessions Session[]
}

model Product {
    id          String   @id @default(uuid())
    name        String   @db.VarChar(120)
    description String   @db.VarChar(2000)
    imageFile   String   @db.VarChar(2048)
    price       Int
    currency    Currency
    createdAt   DateTime @default(now())
}

model Session {
    id        String   @id @default(uuid())
    token     String   @unique
    userId    String
    user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
    createdAt DateTime @default(now())
    expiresAt DateTime
    userAgent String? // Информация о браузере/устройстве
    ipAddress String? // IP адрес для безопасности

    @@index([token])
    @@index([userId])
    @@index([expiresAt])
}
