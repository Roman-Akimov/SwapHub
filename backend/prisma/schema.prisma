generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum Currency {
    RUB
    USD
}

model Product {
    id          Int      @id @default(autoincrement())
    name        String   @db.VarChar(120)
    description String   @db.VarChar(2000)
    imageFile   String   @db.VarChar(2048)
    price       Decimal  @db.Decimal(12, 2)
    currency    Currency
}
