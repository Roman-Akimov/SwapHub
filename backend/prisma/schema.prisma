generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
}

enum Currency {
    RUB
    USD
}

enum UserRole {
    USER
    SELLER
    ADMIN
}

model User {
    id        String   @id @default(uuid())
    email     String   @unique
    password  String
    createdAt DateTime @default(now())
    firstName String
    lastName  String
    nickName  String   @unique
    role      UserRole @default(USER)
}

model Product {
    id          String   @id @default(uuid())
    name        String   @db.VarChar(120)
    description String   @db.VarChar(2000)
    imageFile   String   @db.VarChar(2048)
    price       Int
    currency    Currency
    createdAt   DateTime @default(now())
}
